# ======================================
# Bero System - Environment Configuration
# ======================================

# Backend API Base URL (للبيانات العامة)
# قم بتغيير هذا الرابط ليتوافق مع عنوان الباك اند الخاص بك
REACT_APP_API_URL=https://ground-production.up.railway.app/api/v1

# Company API Base URL (لتسجيل دخول الشركات والاشتراكات)
# متصل بلوحة التحكم الإدارية SaaS
REACT_APP_COMPANY_API_URL=https://ground-production.up.railway.app/api/v1/companies

# Application Settings
REACT_APP_NAME=Bero System
REACT_APP_VERSION=2.0.0

# Optional: API Timeout (milliseconds)
REACT_APP_API_TIMEOUT=30000

# Optional: Enable Debug Mode
REACT_APP_DEBUG=false

# Token Storage Keys
REACT_APP_COMPANY_TOKEN_KEY=company_token
REACT_APP_COMPANY_REFRESH_TOKEN_KEY=company_refresh_token

# Session Settings
REACT_APP_TOKEN_REFRESH_INTERVAL=60000
REACT_APP_SESSION_CHECK_INTERVAL=300000
